<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hotel.management">

    <application
        android:name=".HotelManagementApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.AppMarina">
        <activity
            android:name="com.hotel.management.ui.dashboard.MainActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name="com.hotel.management.ui.auth.LoginActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.hotel.management.ui.auth.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppMarina.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
