<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/label_search">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/filterChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/filterAll"
                style="@style/Widget.Material3.Chip.Assist"
                android:text="@string/label_filters"
                android:checkable="true"
                android:checked="true"
                android:tag=""
                />

            <com.google.android.material.chip.Chip
                android:id="@+id/filterInhouse"
                style="@style/Widget.Material3.Chip.Assist"
                android:text="@string/label_status_occupied"
                android:checkable="true"
                android:tag="inhouse" />

            <com.google.android.material.chip.Chip
                android:id="@+id/filterUpcoming"
                style="@style/Widget.Material3.Chip.Assist"
                android:text="@string/label_status_upcoming"
                android:checkable="true"
                android:tag="upcoming" />

            <com.google.android.material.chip.Chip
                android:id="@+id/filterCompleted"
                style="@style/Widget.Material3.Chip.Assist"
                android:text="@string/label_status_completed"
                android:checkable="true"
                android:tag="completed" />

            <com.google.android.material.chip.Chip
                android:id="@+id/filterCancelled"
                style="@style/Widget.Material3.Chip.Assist"
                android:text="@string/label_status_cancelled"
                android:checkable="true"
                android:tag="cancelled" />
        </com.google.android.material.chip.ChipGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bookingsList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/emptyState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/label_empty_state"
            android:visibility="gone"
            android:layout_marginTop="16dp" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addBookingFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:contentDescription="@string/label_add_booking"
        app:layout_anchorGravity="bottom|end"
        app:srcCompat="@drawable/ic_launcher_foreground"
        app:layout_anchor="@id/bookingsList" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
